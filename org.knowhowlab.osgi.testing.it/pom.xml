    <modelVersion>4.0.0</modelVersion>

    <groupId>org.knowhowlab.osgi</groupId>
    <artifactId>org.knowhowlab.osgi.testing.it</artifactId>
    <packaging>pom</packaging>

    <name>KnowHowLab OSGi Testing - Integration Test</name>
